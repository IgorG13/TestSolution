@{
    ViewData["Title"] = "Cars storage";
}

<!doctype html>
<html ng-app="carsApp">
<head>
    <meta charset="utf-8">
</head>
<body ng-controller="carsController">
    <div class="page-header">
        <h1> @ViewData["Title"] </h1>
    </div>
    <div class="panel">
        <div class="form-inline">
            <div class="form-group">
                <div class="col-md-8">
                    <input class="form-control" id="model"  ng-model="carModel" required maxlength="50" placeholder="Model"/>
                </div>
            </div>            
            <div class="form-group">
                <div class="col-md-4">
                    <input type="number"class="form-control" ng-model="engine" required min="0.1" placeholder="Engine capacity" />
                </div>
                
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <input type="number" class="form-control" ng-model="price" required min="0.1" placeholder="Price" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <button class="btn btn-default" ng-click="addCar(key, carModel, engine, price)">Add car</button>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    <input type="password" class="form-control" ng-model="key" required maxlength="50" placeholder="Secret key" />
                </div>
            </div>
        </div>
        <div><img class="loading" ng-show="loading" src="https://www.epimedyumsitesi.net/siparis/loading.gif" /></div>
        <table class="table table-striped" ng-show="showCars">
            <thead>
                <tr>
                    <th>Model</th>
                    <th>Engine capacity</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="car in cars">
                    <td>{{car.model}}</td>
                    <td>{{car.engineCapacity}}</td>
                    <td>{{car.price}}</td>
                    <td><button class="btn btn-default" ng-click="deleteCar(car)">Delete</button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <script>
     </script>
</body>
</html>